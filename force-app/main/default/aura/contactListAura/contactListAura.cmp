<aura:component controller="ContactListController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction" access="global" >
	 <aura:attribute name="caseList" type="Case[]"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    <aura:iteration items="{!v.caseList}" var="case">
        <lightning:card title="{!case.Status}" footer="{!case.Origin}"
                        iconName="standard:case" >
            <aura:set attribute="actions">
                <lightning:button label="View Details" variant="brand"/>
            </aura:set>
            {!case.Status} {!case.Origin} <br/>
            {!case.CaseNumber} 
        </lightning:card>
    </aura:iteration>
</aura:component>